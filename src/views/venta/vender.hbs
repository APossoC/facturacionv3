                            </tr>
                        </tbody>
                    </table>
                </div> <!-- panel body -->
                <div class="panel-footer text-center">Piefactura
                </div>
            </div> <!-- panel -->
        </div> <!-- col -->
    </div> <!-- row -->
    <div class="row text-center">
        <p class="">peu pagina</p>
    </div>
</div> <!-- container -->

<!-- Modal Consulta Cliente -->
<div class="modal fade" id="consultarClienteModalCenter" tabindex="-1" role="dialog"
    aria-labelledby="consultarClienteModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="consultarClienteModalCenterTitle">Selecciona el Cliente</h5>
            </div>
            <div class="modal-body">
                <table class="table-sm table-striped table-light" id="tablaClientes">
                    <caption>Lista de Clientes</caption>
                    <thead>
                        <tr>
                            <th scope="col">id</th>
                            <th scope="col">Documento Identidad</th>
                            <th scope="col">Nombre Completo</th>
                            <th scope="col">Direccion</th>
                            <th scope="col">Telefono</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            {{#each clientes}}
                            <th scope="row">{{id_cliente}}</td>
                            <td>{{dui}}</td>
                            <td>{{nombre_completo}}</td>
                            <td>{{direccion}}</td>
                            <td>{{telefono}}</td>
                            <td><a href="javascript:void(0);" class="btn btn-primary seleccionarCliente"
                                    data-id_cliente="{{id_cliente}}" data-dui="{{dui}}"
                                    data-nombre_completo="{{nombre_completo}}" data-direccion="{{direccion}}"
                                    data-telefono="{{telefono}}" data-dismiss="modal">Seleccionar</a></td>

                        </tr>
                        {{/each }}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Consulta Vendedor -->
<div class="modal fade" id="consultarVendedorModalCenter" tabindex="-1" role="dialog"
    aria-labelledby="consultarVendedorModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="consultarVendedorModalCenterTitle">Selecciona el Vendedor</h5>
            </div>
            <div class="modal-body">
                <table class="table-striped table-light rounded-top rounded-bottom" id="tablaVendedor">
                    <thead>
                        <tr>
                            <th scope="col">id</th>
                            <th scope="col">Documento Identidad</th>
                            <th scope="col">Nombre Completo</th>
                            <th scope="col">Direccion</th>
                            <th scope="col">Telefono</th>
                            <th scope="col">Email</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            {{#each vendedor}}
                            <th scope="row">{{id_vendedor}}</td>
                            <td>{{dui}}</td>
                            <td>{{nombre_completo}}</td>
                            <td>{{direccion}}</td>
                            <td>{{telefono}}</td>
                            <td>{{acceso_id}}</td>
                            <td>{{email}}</td>
                            <td><a href="javascript:void(0);" class="btn btn-primary seleccionarVendedor"
                                    data-id_vendedor="{{id_vendedor}}" data-dui="{{dui}}"
                                    data-nombre_completo="{{nombre_completo}}" data-email="{{email}}"
                                    data-telefono="{{telefono}}" data-dismiss="modal">Seleccionar</a></td>

                        </tr>

                        {{/each}}
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tablaClientes').on('click', '.seleccionarCliente', function () {
            var id_cliente = $(this).data('id_cliente');
            var duiC = $(this).data('dui');
            var nombre_completoC = $(this).data('nombre_completo');
            var direccionC = $(this).data('direccion');
            var telefonoC = $(this).data('telefono');
            $('.id_cliente').val(id_cliente);
            $('.duiCliente').text(duiC);
            $('.nombre_completoCliente').text(nombre_completoC);
            $('.direccionCliente').text(direccionC);
            $('.telefonoCliente').text(telefonoC);
        });

        $('#tablaVendedor').on('click', '.seleccionarVendedor', function () {
            var id_vendedor = $(this).data('id_vendedor');
            var duiV = $(this).data('dui');
            var nombre_completoV = $(this).data('nombre_completo');
            var emailV = $(this).data('email');
            var telefonoV = $(this).data('telefono');
            $('.id_vendedor').val(id_vendedor);
            $('.duiVendedor').text(duiV);
            $('.nombre_completoVendedor').text(nombre_completoV);
            $('.emailVendedor').text(emailV);
            $('.telefonoVendedor').text(telefonoV);
        });
    });
</script>