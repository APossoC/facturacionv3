<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/clientes/edit/{{link.id}}" method="POST">
                        <div class="form-group">
                            <input type="number" value="{{link.dui}}" name="dui" class="form-control" placeholder="Dui">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.nombre_completo}}" name="nombre_completo"
                                class="form-control" placeholder="Nombre Completo">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.direccion}}" name="direccion" class="form-control"
                                placeholder="Direccion">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.telefono}}" name="telefono" class="form-control"
                                placeholder="Telefono">
                        </div>


                        <div class="form-group">
                            <a href="/clientes" class="btn btn-danger btn-block">Regresar</a>
                            <button class="btn btn-success btn-block">Guardar</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>