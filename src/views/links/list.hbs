<div class="container p4">
    <div class="row">

        <table class="table table-sm">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Documento Identidad</th>
                    <th scope="col">Nombre Completo</th>
                    <th scope="col">Direccion</th>
                    <th scope="col">Telefono</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    {{#each links}}
                    <th scope="row">{{id}}</td>
                    <td>{{dui}}</td>
                    <td>{{nombre_completo}}</td>
                    <td>{{direccion}}</td>
                    <td>{{telefono}}</td>
                    <td><a href="../links/delete/{{id}}" class="btn btn-danger">Borrar</a></td>
                    <td><a href="../links/edit/{{id}}" class="btn btn-secondary">Editar</a></td>
                </tr>
                {{else }}
                <tr>
                    <th>No hay datos guardados.</th>
                    <td><a href="../links/add" class="btn btn-success">Crear</a></td>
                </tr>
                {{/each}}
            </tbody>

        </table>

    </div>

</div>